@model BankManagement.Models.Customer
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>

<table class="table">
    <tr>
        <th>Customer No</th>
        <td>@Model.CustomerNo</td>
    </tr>
    <tr>
        <th>Customer Name</th>
        <td>@Model.CustomerName</td>
    </tr>
    <tr>
        <th>Phone No</th>
        <td>@Model.PhoneNo</td>
    </tr>
    <tr>
        <th>Date of Birth</th>
        <td>@Model.DateOfBirth</td>


    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.Address</td>
    </tr>
    <tr>
        <th>Email</th>
        <td>@Model.Email</td>
    </tr>
    <tr>
        <th>Policy Name</th>
        <td>
            @if (Model.PolicyDetail != null)
            {
                @Model.PolicyDetail.PolicyName
            }
        </td>
    </tr>
    <tr>
        <th>Image</th>
        <td><img src="data:image;base64,@Model.Photo" width="100px" /></td>
    </tr>
    
</table>
<a href="/Customer/Index" class="btn btn-outline-primary">Back To Customer List</a>

