@model Day6EFDBDemo.Models.Product 
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Details</h2>
<table class="table">
    <tr>
        <th>Product ID</th>
        <td>@Model.productId</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.productName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>
            @if (Model.price.HasValue)
            {
                @Model.price
            }
        </td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>
            @if(Model.dateOfPurchase.HasValue)
            {
                @Model.dateOfPurchase.Value.ToString("dd/M/yyyy")
            }
        </td>
    </tr>
    <tr>
        <th>Availability Status</th>
        <td>@Model.availabilityStatus</td>
    </tr>
    <tr>
        <th>Category Name</th>
        <td>
            @if(Model.Category !=null)
            {
                @Model.Category.categoryName
            }
        </td>
    </tr>
    <tr>
        <th>Brand Name</th>
        <td>
            @if(Model.Brand != null)
            {
                @Model.Brand.brandName
            }
        </td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.active</td>
    </tr>

</table>
<a href="/Products/Index" class="btn btn-outline-primary">Back To Product List</a>
