
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
<form action="/Products/Create" method="post">
    <div class="form-group">
        <label>Product Id</label>
        <input type="text" class="form-control" id="txtProductId" placeholder="ProductId" name="ProductId" />
    </div>
    <div class="form-group">
        <label>Product Name</label>
        <input type="text" class="form-control" id="txtProductName" placeholder="Product Name" name="ProductName"/>
    </div>
    <div class="form-group">
        <label>Product Rate</label>
        <input type="text" class="form-control" id="txtProductRate" placeholder="Product Rate" name="ProductRate" />
    </div>
    <button>Submit</button>
</form>

