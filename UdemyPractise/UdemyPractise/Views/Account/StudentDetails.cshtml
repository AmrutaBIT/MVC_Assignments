
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    <meta charset="utf-8" />
    <title>@ViewBag.Title - My ASP.NET MVC Application</title>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>

</head>

<body>
    @{
        string StudentResult;
        if (ViewBag.StudentMark >= 35)
        {
            StudentResult = "Pass";
        }
        else
        {
            StudentResult = "Fail";
        }


    }
    <div class="container-fluid">
        <table class="table">
            <tr>
                <td>StudentId</td>
                <td>@ViewBag.StudentId</td>
            </tr>
            <tr>
                <td>Name</td>
                <td>@ViewBag.StudentName</td>
            </tr>
            <tr>
                <td>Course</td>
                <td>@ViewBag.StudentCourse</td>
            </tr>
            <tr>
                <td>Marks</td>
                <td>@ViewBag.StudentMark</td>
            </tr>
            <tr>
                <td>Result</td>
                <td>@StudentResult</td>
            </tr>
            <tr>
                <td>
                    @if (StudentResult == "Pass")
                    {
                        <span class="text-success">Congratulations!! Keep It Up</span>

                    }
                    else
                    {
                        <span class="text-danger">Doing Good. A bit Improvement Needed!!</span>

                    }
            <tr>
                <td>Semesters</td>
                <td>
                    <ul>
                        @for (int i = 1; i <= ViewBag.NoOfSem; i++)
                        {
                            <li>@i</li>
                        }
                    </ul>
                </td>
            </tr>
            <tr>
                <td>Subjects</td>
                <td>
                    <ol>
                        @foreach (var subject in ViewBag.Subjects)
                        {
                            <li>@subject</li>

                        }
                </ol>
            </td>
        </tr>
    </table>
</div>
</body>
</html>
